<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IT3048C_Final.Views.AccountListView"
             xmlns:viewmodel="clr-namespace:IT3048C_Final.ViewModels"
             x:DataType="viewmodel:AccountEntryViewModel"
             Title="Account List"
             Padding="40">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Clicked="AddAccount" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout>
        <CollectionView x:Name="AccountList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout Padding="10">
                        <Label Text="{Binding Name}" FontSize="Medium" FontAttributes="Bold"/>
                        <Label Text="{Binding Username}" FontSize="Small"/>

                        <Button Grid.Column="1" Text="Edit" WidthRequest="100"
                            HeightRequest="40"/>
                        
                        <Button Grid.Column="1" Text="Copy" WidthRequest="100"
                            HeightRequest="40"/>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>