<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IT3048C_Final.Views.AccountListView"
             xmlns:viewmodel="clr-namespace:IT3048C_Final.ViewModels"
             x:DataType="viewmodel:AccountEntryViewModel"
             Title="Account List"
             Padding="40">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Clicked="AddAccount" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout>
        <CollectionView x:Name="AccountList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid RowDefinitions="*" ColumnDefinitions="*,*,*,*" Padding="5">
                        <Label Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding Name}" FontAttributes="Bold"
                               HorizontalOptions="Start" VerticalOptions="Center" Margin="0,0,50,0"/>

                        <Button Grid.Column="2" Text="Edit" HorizontalOptions="End"/>

                        <Button Grid.Column="3" Text="Copy" HorizontalOptions="End"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>